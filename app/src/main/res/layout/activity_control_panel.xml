<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control_panel2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/Back"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamflightclub.flightclub.ControlPanelActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Change password"
        android:textAlignment="center"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/changePassword"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boarders"/>

    <Button
        android:text="Change E-mail"
        android:textAlignment="center"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/changeEmail"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:background="@drawable/boarders"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="View Recently Purchased Tickets"
        android:textAlignment="center"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/viewTicket"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:background="@drawable/boarders"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewQR"
        android:textAllCaps="false"


        android:text="Read QR code"
        android:layout_below="@+id/viewTicket"
        android:layout_alignLeft="@+id/viewTicket"
        android:layout_alignStart="@+id/viewTicket" />

</RelativeLayout>
