<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_margin="10dp"
        android:id="@+id/flight_card_view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:id = "@+id/car_picture"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/car_picture"
                android:id = "@+id/vehicle_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/num_of_passengers"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:text="HELLO"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/num_of_passengers"
                android:id = "@+id/num_of_doors"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="HELLO"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/num_of_doors"
                android:id = "@+id/num_of_bags"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="HELLO"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/num_of_bags"
                android:id = "@+id/car_price"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:textSize="15dp"
                android:textColor="@android:color/holo_red_light"
                android:text="HELLO"
                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>