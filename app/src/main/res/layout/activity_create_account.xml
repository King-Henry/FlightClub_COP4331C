<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamflightclub.flightclub.CreateAccountActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstName_createAccount"
        android:hint="First"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/firstName_createAccount"
        android:layout_alignLeft="@+id/firstName_createAccount"
        android:layout_alignStart="@+id/firstName_createAccount"
        android:layout_marginTop="14dp"
        android:id="@+id/lastName_createAccount"
        android:hint="Last"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailAddress_createAccount"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lastName_createAccount"
        android:layout_alignStart="@+id/lastName_createAccount"
        android:hint="Email"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/emailAddress_createAccount"
        android:layout_alignLeft="@+id/emailAddress_createAccount"
        android:layout_alignStart="@+id/emailAddress_createAccount"
        android:layout_marginTop="10dp"
        android:id="@+id/password_createAccount"
        android:hint="Password"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/password_createAccount"
        android:layout_alignLeft="@+id/password_createAccount"
        android:layout_alignStart="@+id/password_createAccount"
        android:id="@+id/confirmPassword_createAccount"
        android:hint="Confirm Password"
        android:textAlignment="center" />

    <TextView
        android:text="@string/createAccount_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:id="@+id/textView"
        tools:text="string/createAccount_title"
        android:textSize="38sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:text="@string/SignUpButton_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword_createAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/createAccountButton"
        android:onClick="SignUp"/>

    <TextView
        android:text="@string/ReturnToLoginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnToLoginLink"
        android:clickable="true"
        android:onClick="returnToLogin"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

</RelativeLayout>
