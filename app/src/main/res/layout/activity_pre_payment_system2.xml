<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamflightclub.flightclub.PrePaymentSystemActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:id="@+id/continue_cart_button_root"
        android:layout_gravity="center|bottom"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue to purchase"
            android:id="@+id/pay_button"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:id="@+id/cart_items_recycler_view"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="0dp"
        >

    </android.support.v7.widget.RecyclerView>

</FrameLayout>