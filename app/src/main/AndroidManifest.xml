<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamflightclub.flightclub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateAccountActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.ViewPursTicketsActivity" />
        <activity android:name=".ControlPanelActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ChangeEmailActivity" />
        <activity android:name=".MyCartActivity" />
        <activity android:name=".PrePaymentSystemActivity" />
        <activity android:name=".PaymentSystemActivity" />
        <activity android:name=".DisplayPursTicketInformation" />
        <activity android:name=".FinalTicketActivity" />
    </application>

</manifest>